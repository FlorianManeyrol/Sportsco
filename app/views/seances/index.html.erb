<div class="bg-grey">
	<div class="searchbar">
		<div class="row">
			<div class="searchbar-content">
				<%= simple_form_for :search, :html => { :class => 'form-inline form' }, url: seances_path, method: :get do |f| %>
				<%= f.input :sport, collection: @sports, prompt: 'Quel sport souhaitez-vous pratiquer?', label: false, wrapper_html: { class: "searchbar-select" }, input_html: { class: 'search-sport'}%>
				<%= f.input :address, placeholder: 'OÃ¹?', input_html: { class: 'search-departement', value: @address, :size => 25 }, label: false %>
				<div class="input-group date" id='datetimepicker'><%= f.input :start_at, label: false, as: :string, placeholder: 'Quand?', input_html: { class: 'search-date' }%>
				<span id="span1" class="fa fa-calendar"></span></div><%= f.submit "Rechercher", class: 'btn btn-blue btn-search' %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="container">
		<% if @seances.size > 0 %>
			<% @seances.each do |seance| %>
				<%= link_to seance do %>
					<div class="seance-card">
						<div class="row">
							<div class="col-sm-3">
								<%= cl_image_tag seance.sport.photo, crop: :fill, class: 'media-object img-responsive' %>
							</div>
							<div class="col-sm-6">
								<div class="seance-card-title">
									<%= seance.title %>
								</div>
								<div class="seance-card-description">
									<%= seance.description %>
								</div>
							</div>
							<div class="col-sm-3">
								<div class="seance-card-description">
									<p><%= seance.created_at.strftime("rdv le : %d/%m/%Y") %></p>
									<p><%= seance.address %></p>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		<% else %>
			Oh Damn ! Il n'y a pas encore d'annonce
		<% end %>
	</div>
</div>
