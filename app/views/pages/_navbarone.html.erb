<div class="navbar-wagon-one"> 
  <%= link_to root_path, class: "navbar-wagon-brand-one" do %>
    <%= image_tag "logo-white.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Login text link -->
      <%= link_to "Propose ton sport", new_seance_path, class: "navbar-wagon-item navbar-wagon-link-one btn-cta-white" %>
      <%= link_to "Recherche des partenaires", seances_path, class: "navbar-wagon-item navbar-wagon-link-one" %>
      

      <%= link_to "Comment ça marche?", "#", class: "navbar-wagon-item navbar-wagon-link-one" %>

      <!-- Profile picture and dropdown -->

      <div class="navbar-wagon-item">
        <div class="dropdown">
          <div class="dropdown-toggle" data-toggle="dropdown">
          	<div class="profil-name">
      				<%= current_user.first_name.capitalize %> <i class="fa fa-angle-down" aria-hidden="true"></i>

     				</div>
     				<div class="profil-picture avatar">
     				<% if current_user.picture.present? %>
     					<%= cl_image_tag current_user.picture, :height => 30, :width => 30, :crop => :fill %>
						<% else %>
      				<%= image_tag 'default-avatar.svg' %>
      			<% end %>
     				</div>
          </div>          
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> Mon profil
              <% end %>
            </li>
            <li>
              <%= link_to users_seances_path do %>
                <i class="fa fa-home"></i> Mes annonces
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i> Se déconnecter
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <%= link_to "Propose une séance", new_seance_path, class: "navbar-wagon-item navbar-wagon-link-one btn-cta-white" %>
      <%= link_to "Recherche des	 partenaires", seances_path, class: "navbar-wagon-item navbar-wagon-link-one" %>  

      <%= link_to "Comment ça marche?", "#", class: "navbar-wagon-item navbar-wagon-link-one" %>

      <%= link_to "Inscription", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link-one" %>
      <%= link_to "Connexion", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link-one" %>


    <% end %>

    <!-- Button (call-to-action) -->
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

